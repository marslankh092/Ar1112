<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="12dp">



    <ImageView
        android:id="@+id/history_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/tiktk"
        android:layout_marginLeft="13dp" />



    <TextView
        android:id="@+id/history_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/history_image"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="9dp"

        android:text="www.tiktok.com "
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/history_website"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_name"
        android:layout_toRightOf="@+id/history_image"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="9dp"

        android:text="https://www.titkok.com/ "
        android:textColor="#60000000"
        android:textSize="9sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/history_options"
        android:layout_width="30dp"
        android:layout_height="46dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/verticaldots"
        app:tint="#90000000" />





</RelativeLayout>
